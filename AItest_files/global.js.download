     @ @access private
     */
    function getAddressFormats() {
        if (!countriesConfig){
             loadJson(function(_res){
                 countriesConfig = _res;
             });
            var inter = setInterval(function(){
                if(countriesConfig){
                  clearInterval(inter);
                  return countriesConfig;
                }
            },200);
        }
        else
           return countriesConfig;
    }

    /**
